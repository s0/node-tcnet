{
    "compilerOptions": {
        // Output related
        "target": "ES2022",
        "declaration": true,

        // Module resolution
        "moduleResolution": "NodeNext",

        // Type checking
        "lib": ["es2022", "DOM", "DOM.Iterable"],
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "skipLibCheck": true,

        "module": "NodeNext",
        "types": ["node"],
        "outDir": "dist"
    },
    "compileOnSave": true,
    "include": ["src/**/*"]
}
